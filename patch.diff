+    final box = Hive.box<SavedLocation>('locations');
+
+    return Scaffold(
+      appBar: AppBar(title: const Text("Saved Locations")),
+      body: ValueListenableBuilder(
+        valueListenable: box.listenable(),
+        builder: (context, Box<SavedLocation> items, _) {
+          if (items.isEmpty) {
+            return const Center(child: Text("No locations saved"));
+          }
+
+          return ListView.builder(
+            itemCount: items.length,
+            itemBuilder: (_, index) {
+              final loc = items.getAt(index)!;
+
+              return ListTile(
+                title: Text(loc.name),
+                subtitle: Text("${loc.latitude}, ${loc.longitude}"),
+                trailing: IconButton(
+                  icon: const Icon(Icons.navigation),
+                  onPressed: () => MapService.openGoogleMaps(
+                    loc.latitude,
+                    loc.longitude,
+                  ),
+                ),
+                onLongPress: () => items.deleteAt(index),
+              );
+            },
+          );
+        },
+      ),
+    );
