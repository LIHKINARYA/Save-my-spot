+import 'package:flutter/material.dart';
+import '../services/location_service.dart';
+import '../models/location_model.dart';
+import 'package:hive/hive.dart';
+
+class SaveLocationScreen extends StatefulWidget {
+  @override
+  _SaveLocationScreenState createState() => _SaveLocationScreenState();
+}
+
+class _SaveLocationScreenState extends State<SaveLocationScreen> {
+  String name = "";
+  double? lat;
+  double? lng;
+
+  @override
+  void initState() {
+    super.initState();
+    fetchLocation();
+  }
+
+  fetchLocation() async {
+    final pos = await LocationService.getCurrentLocation();
+    setState(() {
+      lat = pos.latitude;
+      lng = pos.longitude;
+    });
+  }
+
+  saveLocation() async {
+    final box = Hive.box<SavedLocation>('locations');
+    box.add(
+      SavedLocation(
+        name: name,
+        latitude: lat!,
+        longitude: lng!,
+        createdAt: DateTime.now(),
+      ),
+    );
+    Navigator.pop(context);
+  }
+
+  @override
+  Widget build(BuildContext context) {
+    return Scaffold(
+      appBar: AppBar(title: const Text("Save Location")),
+      body: lat == null
+          ? const Center(child: CircularProgressIndicator())
+          : Padding(
+              padding: const EdgeInsets.all(20),
+              child: Column(
+                children: [
+                  Text("Latitude: $lat"),
+                  Text("Longitude: $lng"),
+                  TextField(
+                    decoration: const InputDecoration(labelText: "Location Name"),
+                    onChanged: (v) => name = v,
+                  ),
+                  const SizedBox(height: 20),
+                  ElevatedButton(
+                    onPressed: saveLocation,
+                    child: const Text("Save"),
+                  )
+                ],
+              ),
+            ),
+    );
+  }
+}

